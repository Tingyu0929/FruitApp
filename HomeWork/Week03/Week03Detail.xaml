<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeWork.Week03.Week03Detail">
    <ContentPage.Content>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand">
            
            <!-- Title -->
            <Label x:Name="Title"
                   Text=""
                   FontAttributes="Bold"
                   FontSize="Large"
                   TextColor="DarkBlue"
                   HorizontalOptions="CenterAndExpand"/>
            
            <!-- Image -->
            <Image x:Name="Image"
                   WidthRequest="200"
                   HeightRequest="200"
                   HorizontalOptions="CenterAndExpand">
                <Image.Clip>
                    <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                </Image.Clip>
            </Image>
            
            <!-- Description -->
            <Label x:Name="Description"
                   Text=""
                   FontSize="Medium"
                   TextColor="Gray"
                   HorizontalOptions="CenterAndExpand"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>